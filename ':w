from typing import List

class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:
        nums.sort()
        numsLen = len(nums)
        currentCount = 1
        longestCon = 1

        if not nums:
            return 0

        for idx, num in enumerate(nums):
            if idx < numsLen - 1:
                if num == nums[idx + 1] - 1:
                    currentCount+=1
                    longestCon = max(longestCon, currentCount)
                else:
                    currentCount = 0
        return longestCon
        


def main():
    solution = Solution()
    print(solution.longestConsecutive([0,3,7,2,5,8,4,6,0,1]))

main()
